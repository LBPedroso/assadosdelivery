# ================================================
# .htaccess - Assados Delivery
# Configuração do Apache para produção
# ================================================

# Habilitar RewriteEngine
RewriteEngine On

# Definir a pasta base (ajuste se necessário)
# Se o site estiver na raiz: RewriteBase /
# Se estiver em subpasta: RewriteBase /assados-delivery/
RewriteBase /

# ================================================
# SEGURANÇA
# ================================================

# Proteger arquivos sensíveis
<FilesMatch "^(database\.php|config\.php|\.env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger pasta database
<IfModule mod_rewrite.c>
    RewriteRule ^database/ - [F,L]
</IfModule>

# Desabilitar listagem de diretórios
Options -Indexes

# ================================================
# PERFORMANCE
# ================================================

# Habilitar compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# ================================================
# REDIRECIONAMENTOS
# ================================================

# Redirecionar www para não-www (opcional)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# Forçar HTTPS (descomente quando tiver SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ================================================
# TRATAMENTO DE ERROS
# ================================================

# Página de erro 404 personalizada (crie se quiser)
# ErrorDocument 404 /404.php

# ================================================
# PHP SETTINGS
# ================================================

# Aumentar limites (ajuste conforme necessário)
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300

# Habilitar exibição de erros (DESABILITAR EM PRODUÇÃO!)
# php_flag display_errors Off
# php_flag display_startup_errors Off
# php_value error_reporting 0

# Definir timezone
php_value date.timezone "America/Sao_Paulo"

# ================================================
# CONFIGURAÇÕES ADICIONAIS
# ================================================

# Definir página inicial
DirectoryIndex index.php index.html

# Charset padrão UTF-8
AddDefaultCharset UTF-8
